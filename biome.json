{
	"$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/node_modules", "!**/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off",
				"useArrowFunction": "error",
				"noBannedTypes": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off",
				"noPrototypeBuiltins": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noChildrenProp": "off",
				"noUnsafeOptionalChaining": "off"
			},
			"performance": {
				"noAccumulatingSpread": "off"
			},
			"style": {
				"noUselessElse": "off",
				"noNonNullAssertion": "off",
				"useImportType": {
					"fix": "safe",
					"level": "error"
				}
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "none",
			"arrowParentheses": "asNeeded"
		}
	}
}
